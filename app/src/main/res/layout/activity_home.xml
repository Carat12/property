<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/tool_bar" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/rose_quartz"
                android:padding="20dp"
                android:text="Dashboard"
                android:textColor="@color/white"
                android:textSize="25sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                android:paddingHorizontal="10dp">

                <com.example.property.helper.DashboardItem
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:imgSrc="@drawable/ic_baseline_notifications_24"
                    app:title="Alerts" />

                <com.example.property.helper.DashboardItem
                    android:id="@+id/item_property"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:focusable="true"
                    app:imgSrc="@drawable/ic_baseline_house_24"
                    app:title="Properties" />

                <com.example.property.helper.DashboardItem
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:imgSrc="@drawable/ic_baseline_person_24"
                    app:title="Tenants" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:paddingHorizontal="10dp">

                <com.example.property.helper.DashboardItem
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:imgSrc="@drawable/ic_baseline_credit_card_24"
                    app:title="Transactions" />

                <com.example.property.helper.DashboardItem
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:imgSrc="@drawable/ic_baseline_monetization_on_24"
                    app:title="Collect Rent" />

                <com.example.property.helper.DashboardItem
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:imgSrc="@drawable/ic_baseline_format_list_bulleted_24"
                    app:title="To-Do List" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal"
                android:paddingHorizontal="10dp">

                <com.example.property.helper.DashboardItem
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:imgSrc="@drawable/ic_baseline_directions_car_24"
                    app:title="Trips" />

                <com.example.property.helper.DashboardItem
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:imgSrc="@drawable/ic_baseline_insert_drive_file_24"
                    app:title="Documents" />

                <com.example.property.helper.DashboardItem
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:imgSrc="@drawable/ic_baseline_people_24"
                    app:title="Vendors" />
            </LinearLayout>

            <include layout="@layout/divider_register" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal"
                android:text="20% complete with account setup"
                android:textSize="17sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="20dp"
                android:gravity="center_horizontal"
                android:text="Next, add all properties that you own or manage"
                android:textSize="17sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>