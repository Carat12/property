<layout>
    <data>
        <variable
            name="property"
            type="com.example.property.data.models.Property" />

        <variable
            name="viewModel"
            type="com.example.property.ui.property.PropertyViewModel" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/property_bg_grey"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_view_step"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_img_view_circle"
            android:padding="10dp"
            android:src="@drawable/mortgage" />

        <TextView
            android:id="@+id/text_view_step"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Mortgage Information"
            android:textSize="17sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <View
                android:id="@+id/circle_step_one"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:background="@drawable/bg_step_circle"
                android:backgroundTint="@color/rose_red" />

            <View
                android:id="@+id/line_step_one"
                android:layout_width="80dp"
                android:layout_height="3dp"
                android:background="@color/rose_red" />

            <View
                android:id="@+id/circle_step_two"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:background="@drawable/bg_step_circle"
                android:backgroundTint="@color/rose_red" />

            <View
                android:id="@+id/line_step_two"
                android:layout_width="80dp"
                android:layout_height="3dp"
                android:background="@color/rose_red" />

            <View
                android:id="@+id/circle_step_three"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:background="@drawable/bg_step_circle"
                android:backgroundTint="@color/rose_red" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/mortgage_description"
                android:textSize="18sp"
                android:textColor="@color/dark_rose"
                android:padding="15dp"
                android:layout_margin="20dp"
                android:elegantTextHeight="true"
                android:background="@color/light_rose"/>

            <com.google.android.material.checkbox.MaterialCheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:checked="@={property.mortageInfo}"
                android:text="Does this property has a mortgage?" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <Button
                    style="@style/btn_add_property_next"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_btn_auth"
                    android:onClick="@{viewModel::onAddPropertyClicked}"
                    android:text="Add property" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</layout>