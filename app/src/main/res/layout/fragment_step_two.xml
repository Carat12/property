<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="property"
            type="com.example.property.data.models.Property" />

        <variable
            name="viewModel"
            type="com.example.property.ui.property.PropertyViewModel" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/property_bg_grey"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_view_step"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_img_view_circle"
            android:padding="10dp"
            android:src="@drawable/ic_baseline_image_24" />

        <TextView
            android:id="@+id/text_view_step"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Property Details"
            android:textSize="17sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <View
                android:id="@+id/circle_step_one"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:background="@drawable/bg_step_circle"
                android:backgroundTint="@color/rose_red" />

            <View
                android:id="@+id/line_step_one"
                android:layout_width="80dp"
                android:layout_height="3dp"
                android:background="@color/rose_red" />

            <View
                android:id="@+id/circle_step_two"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:background="@drawable/bg_step_circle"
                android:backgroundTint="@color/rose_red" />

            <View
                android:id="@+id/line_step_two"
                android:layout_width="80dp"
                android:layout_height="3dp"
                android:background="@color/step_grey" />

            <View
                android:id="@+id/circle_step_three"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:background="@drawable/bg_step_circle"
                android:backgroundTint="@color/step_grey" />
        </LinearLayout>

        <com.google.android.material.card.MaterialCardView
            style="@style/custom_cardview_corner"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingTop="10dp">

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/text_input_layout_property"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Status">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:editable="false"
                        android:text="Owned"
                        android:textSize="17sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/text_input_layout_property"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:hint="Purchase Price"
                    app:prefixText="$">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:inputType="number"
                        android:text="@={property.purchasePrice}"
                        android:textSize="17sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_upload_image"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Upload property image"
                    android:textSize="15sp"
                    app:icon="@drawable/ic_baseline_image_24" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginTop="10dp"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="0dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/bg_image_outline"
                            android:paddingVertical="60dp"
                            android:src="@drawable/ic_baseline_cloud_upload_24" />

                        <ImageView
                            android:id="@+id/img_view"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/btn_next"
                        style="@style/btn_add_property_next"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_btn_auth"
                        android:text="Next" />
                </RelativeLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</layout>