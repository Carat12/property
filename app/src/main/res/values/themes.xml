<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Property.Rose" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!--         Primary brand color.-->
        <item name="colorPrimary">@color/rose_quartz</item>
        <item name="colorPrimaryVariant">@color/center</item>
        <item name="colorOnPrimary">@color/white</item>
        <!--         Secondary brand color.-->
        <item name="colorSecondary">@color/serenity</item>
        <item name="colorSecondaryVariant">@color/dark_serenity</item>
        <item name="colorOnSecondary">@color/black</item>
        <!--         Status bar color.-->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!--         Customize your theme here.-->
        <item name="android:textColor">@color/text_black</item>
        <item name="colorControlNormal">@color/serenity</item>
    </style>

    <style name="Theme.Property.Serenity" parent="Theme.Property.Rose">
        <!--         Primary brand color.-->
        <item name="colorPrimary">@color/serenity</item>
        <!--         Secondary brand color.-->
        <item name="colorSecondary">@color/rose_quartz</item>
    </style>

    <style name="text_input_layout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_marginHorizontal">20dp</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusBottomEnd">10dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="startIconTint">?attr/colorPrimary</item>
        <item name="endIconTint">?attr/colorPrimary</item>
    </style>

    <style name="btn_auth_choice">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingVertical">6dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="btn_auth_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="tab_text">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
    </style>

</resources>