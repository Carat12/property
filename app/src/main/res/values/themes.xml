<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Property.Rose" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!--         Primary brand color.-->
        <item name="colorPrimary">@color/rose_red</item>
        <item name="colorPrimaryVariant">@color/center</item>
        <item name="colorOnPrimary">@color/white</item>
        <!--         Secondary brand color.-->
        <item name="colorSecondary">@color/rose_red</item>
        <item name="colorSecondaryVariant">@color/dark_serenity</item>
        <item name="colorOnSecondary">@color/black</item>
        <!--         Status bar color.-->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!--         Customize your theme here.-->
        <item name="android:textColor">@color/dark_serenity</item>
        <item name="android:textSize">20sp</item>
        <item name="colorControlNormal">@color/serenity</item>
    </style>

    <style name="Theme.Property.Splash" parent="Theme.Property.Rose">
        <item name="colorPrimaryVariant">@color/dark_serenity</item>
    </style>

    <style name="Theme.Property.Serenity" parent="Theme.Property.Rose">
        <!--         Primary brand color.-->
        <item name="colorPrimary">@color/serenity</item>
        <!--         Secondary brand color.-->
        <item name="colorSecondary">@color/rose_quartz</item>
    </style>

    <style name="Theme.Property.Toolbar" parent="Theme.Property.Rose">
        <item name="colorControlNormal">@color/rose_red</item>
    </style>

    <style name="Theme.Property.ActionButton" parent="Theme.Property.Rose">
        <item name="colorSecondary">@color/rose_red</item>
    </style>

    <style name="action_bar">
        <item name="theme">@style/Theme.Property.ActionButton</item>
        <item name="android:layout_margin">20dp</item>
        <item name="tint">@color/white</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="text_input_layout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_marginHorizontal">20dp</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusBottomEnd">10dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="startIconTint">?attr/colorPrimary</item>
        <item name="endIconTint">?attr/colorPrimary</item>
    </style>


    <style name="text_input_layout_property" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_marginHorizontal">15dp</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusBottomEnd">10dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>
    </style>

    <style name="btn_property">
        <item name="android:paddingVertical">10dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="btn_auth_choice">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingVertical">6dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="btn_auth_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="btn_add_property_next">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">17sp</item>
        <item name="android:layout_marginHorizontal">15dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>


    <style name="btn_upload_images_option" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/dark_serenity</item>
        <item name="textAllCaps">false</item>
        <item name="iconPadding">50dp</item>
        <item name="iconTint">@color/dark_serenity</item>
        <item name="android:gravity">start</item>
        <item name="android:paddingLeft">15dp</item>
    </style>

    <style name="tab_text">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="custom_cardview_corner" parent="Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/shapeAppearance_custom_corner</item>
        <item name="cardElevation">10dp</item>
    </style>

    <style name="shapeAppearance_custom_corner" parent="">
        <item name="cornerSizeTopRight">40dp</item>
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">40dp</item>
    </style>

    <style name="Theme.Property.Rose.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Property.Rose.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Property.Rose.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>